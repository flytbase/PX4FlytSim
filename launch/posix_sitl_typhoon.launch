<launch>
    <!-- Posix SITL environment launch script -->

    <arg name="headless" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="ns" default="/"/>
    <arg name="world" default="typhoon_h480"/>
    <arg name="camera" default="true"/>
    <arg name="global_namespace" default="flytsim"/>
    
    <group ns="$(arg global_namespace)">
        <node pkg="sitl_gazebo" type="sitl_run.sh" name="simulator" args="ekf2 none gazebo typhoon_h480 $(find sitl_gazebo) " >
            <env name="no_sim" value="1" />
        </node>
         <include file="$(find gazebo_ros)/launch/empty_world.launch">
            <arg name="headless" value="$(arg headless)"/>
            <arg name="gui" value="$(arg gui)"/>
            <arg name="world_name" value="$(find sitl_gazebo)/worlds/$(arg world).world" />
        </include>

    </group>
</launch>
